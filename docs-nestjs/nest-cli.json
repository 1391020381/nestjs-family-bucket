{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "../config/*.yaml", "outDir": "./dist/config" },
      {
        "include": "../views/*.hbs",
        "outDir": "./dist/views",
        "watchAssets": true
      },
      {
        "include": "../uploads/*",
        "outDir": "./dist/uploads",
        "watchAssets": true
      }
    ]
  }
}
